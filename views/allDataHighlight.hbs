<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{{title}}</title>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    tr.highlight {
      background-color: #ffcccc; /* light red background for highlight */
    }
    tr:hover {
      background-color: #f1f1f1;
    }
  </style>
</head>
<body>
  <h1>{{title}}</h1>
  <table>
    <thead>
      <tr>
        <th>Movie ID</th>
        <th>Title</th>
        <th>Genre</th>
        <th>Director</th>
        <th>Year</th>
        <th>Metascore</th>
      </tr>
    </thead>
    <tbody>
      {{#each movies}}
        {{#highlightIfNoMetascore Metascore}}
          <tr class="highlight">
        {{else}}
          <tr>
        {{/highlightIfNoMetascore}}
          <td>{{Movie_ID}}</td>
          <td>{{Title}}</td>
          <td>{{Genre}}</td>
          <td>{{Director}}</td>
          <td>{{Year}}</td>
          <td>{{Metascore}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</body>
</html>
